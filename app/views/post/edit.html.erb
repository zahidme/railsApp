<h1>Edit Book Detail</h1>

<%= form_for @post, :url =>{:action => "update", :id =>@post} do |f| %>

<p>Title: <%= f.text_field 'title' %></p>

<p>Description<br/>

<%= f.text_area 'description' %></p>

<%= f.file_field :attachment %>

<%= f.submit "Save changes" %>

<% end %>

<%= link_to 'Back', {:action => 'index' } %>