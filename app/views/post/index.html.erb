<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "Add New Post", {:action => 'new' }, class: "btn btn-primary" %>
<br />
<br />


<%= form_tag(root_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
  <%= submit_tag "Search" %>
<% end %>


<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>title</th>
         <th>description</th>
         <th>Posted by </th>
         <th>Actions </th>
      </tr>
   </thead>
   
   <tbody>
      <% @posts.each do |post| %>
         
         <tr>
          <td><%= link_to post.title, {:action => 'show', :id => post.id} %></td>
            <%
=begin%>
 <td><%= post.title %></td> 
<%
=end%>

            <td><%= post.description %></td>
            <td><%= post.user.email %></td>
            <%
=begin%>
 <td><%= image_tag (post.attachment), class: "img-responsive"%></td>
            <td><%= link_to "Download Resume", post.attachment %></td> 
<%
=end%>
            

 <td> <%= link_to "Delete", {:action => 'destroy', :id => post.id},
      :confirm => "Are you sure you want to delete this item?" %>
       <b> <%= link_to 'Edit', {:action => "edit",
   :id => post.id} %></b></td> 


         </tr>
        
         
      <% end %>
   </tbody>
   <%
=begin%>
 <%= paginate @posts %> 
<%
=end%>
   
</table>

